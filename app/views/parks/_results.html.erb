<div class="col-lg-12 text-center">
  <div class="section-heading">
    <% if @error %>
      <h2><%= @error %></h2>
    <% else %>
      <% if @parks.blank? %>
        <h3>No results</h3>
      <% else %>
        <h3><%= pluralize(@parks.count, 'result') %></h3>
  </div>
<div>

  <div class="container-fluid">
          <% @parks.each do |park| %>
          <div class='row'>
            <div class='result-item'>
              <h2 class='text-primary'><%= park["name"] %></h2>
              <h4 class='text-primary'><%= park["address"] %></h4>
              <!-- <h3>Activities:</h3> -->
              <p class='text-muted'><%= render_facilities_for(park) %></p>
            </div>
        </div>
          <% end %>
        <% end %>
      <% end %>
  </div>
