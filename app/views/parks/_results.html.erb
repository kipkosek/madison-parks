<div class="col-lg-12 text-center">
  <div class="section-heading">
    <% if @error %>
      <h2><%= @error %></h2>
    <% else %>
      <% if @parks.blank? %>
        <h2>No results</h2>
      <% else %>
        <h2><%= pluralize(@parks.count, 'result') %></h2>
  </div>
<div>

  <div class="container-fluid">
          <% @parks.each do |park| %>
          <div class='row'>
            <div class='feature-item'>
              <h2 class='text-primary'><%= park["name"] %></h2>
              <h4 class='text-primary'><%= park["address"] %></h4>
              <!-- <h3>Activities:</h3> -->
              <p class='text-muted'><%= render_facilities_for(park) %></p>
            </div>
        </div>
          <% end %>
        <% end %>
      <% end %>
  </div>
